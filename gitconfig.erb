[user]
	name = Abe Voelker
	email = abe@abevoelker.com
[alias]
  s = status
  a = add
	co = checkout
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = gvim -f
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
	user = abevoelker
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
